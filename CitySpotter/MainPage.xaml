<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitySpotter.MainPage"
             Title="Routes"
             xmlns:viewModel="clr-namespace:CitySpotter.Domain.Services"
             x:DataType="viewModel:MainPageViewModel">

    <CollectionView ItemsSource="{Binding Routes}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedRoute}"
                SelectionChangedCommand="{Binding NavigateToMapCommand}"
                Margin="0,20,0,0">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="LightGray" Padding="10" Margin="0,10">
                    <VerticalStackLayout>
                        <Label Text="{Binding RouteName}" FontSize="18" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
