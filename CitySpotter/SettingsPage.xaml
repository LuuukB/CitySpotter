<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitySpotter.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Button Command ="{Binding Button_ClickedCommand}" 
                Text="CollorBlindMode"/>
        
        <Button Text="Nederlands"
                Command="{Binding NederlandsButton_ClickedCommand}"/>

        <Button Text="English"
        Command="{Binding EnglishButton_ClickedCommand}"/>

        <Label Text="{Binding Name}"/>
    </VerticalStackLayout>
</ContentPage>