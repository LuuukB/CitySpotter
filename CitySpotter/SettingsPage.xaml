<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitySpotter.SettingsPage"
             Title="SettingsPage"
             BackgroundColor ="{DynamicResource BackgroundColor}">
             
    <VerticalStackLayout>
        <Button Command ="{Binding Button_ClickedCommand}" 
                Text="CollorBlindMode"
                Style="{StaticResource ButtonStyle}"/>
        

        <Button Text="Nederlands"
                Command="{Binding NederlandsButton_ClickedCommand}"
                Style="{StaticResource ButtonStyle}"/>

        <Button Text="English"
                Command="{Binding EnglishButton_ClickedCommand}"
                Style="{StaticResource ButtonStyle}"/>
        
        <Label Text="{Binding Name}" 
               Style="{StaticResource LabelStyle}"/>
    </VerticalStackLayout>

</ContentPage>